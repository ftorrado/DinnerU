<div class="btn-group btn-group-justified">
  <%= link_to raw('<i class="fa fa-chevron-left"></i> Back'), meals_path, :class => 'btn btn-lg btn-default' %>
</div>

<div class="margin-top">
  <h4>Name:</h4>
  <p><%= @meal.name %></p>

  <h4><span class="fa fa-map-marker"></span> Location:</h4>
  <p><%= @meal.location %></p>

  <h4><span class="fa fa-calendar"></span> Date:</h4>
  <p><%= @meal.date %></p>


  <h4 class="margin-top">
    <span class="fa fa-user"></span> Users attending:
  </h4>
  <p><%= @meal.orders_users_count %></p>

  <ul class="list-group">
    <% @meals.invited_users_ids.each do |invited_id| %>
      <li class="list-group-item">
        <% User.find(_id: invited_id) do |invited| %>
          <%= "#{invited.name} <#{invited.email}>" %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <% if @meal.private %>
    <div class="well invite-form">
      <%= render 'orders/form' %>
    </div>
  <% end %>


  <h4 class="margin-top">
    <span class="fa fa-user"></span> Orders:
  </h4>
  <p><%= @meal.orders_count %></p>

  <div class="well order-form">
    <%= render 'orders/form' %>
  </div>

  <% if !@meal.orders.nil? && !@meal.orders.blank? %>
      <div class="row">
        <%= render @meal.orders %>
      </div>
  <% end %>


  <div class="margin-top btn-group btn-group-justified">
    <%= link_to 'Destroy', meal_path(@meal),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                :class => 'btn btn-lg btn-danger' %>
    <%= link_to 'Edit', edit_meal_path(@meal),
                :class => 'btn btn-lg btn-default' %>
  </div>
</div>
