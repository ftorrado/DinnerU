//      console.log(this, $(this).clone());
//      $scripts.add($(this).clone());
//    });
//    $data.remove('script');
//    console.log($data);
//    console.log($scripts);
//
//    $container.html($data);
//    $scripts.each(function() {
//      console.log(this.text, $(this).text);
//      eval(this.text);
//    });
//    var responseScript = data.filter("script");
//    jQuery.each(responseScript, function(idx, val) { eval(val.text); } );

    document.getElementById("widgetContainer").innerHTML = data;
    $container.find('script').each(function () {
